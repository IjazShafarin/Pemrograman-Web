// BUAT FILE helloword.html
<!DOCTYPE html> <!-- Deklarasi tipe dokumen HTML -->
<html lang="en"> <!-- Mulai elemen HTML, dengan atribut bahasa "en" (Inggris) -->
<head>
    <meta charset="UTF-8"> <!-- Deklarasi karakter set UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Pengaturan tampilan untuk perangkat seluler -->
    <title>Belajar JavaScript panulisan dasar</title> <!-- Judul halaman web -->
</head>
<body> <!-- Mulai bagian tubuh dokumen HTML -->
    <div id="title"></div> <!-- Elemen div dengan atribut id "title" -->
    <script>
        document.getElementById("title").innerHTML = "HAI KAWAN"; <!-- Skrip JavaScript untuk mengubah konten div -->
    </script> <!-- Penutup skrip JavaScript -->
</body> <!-- Penutup bagian tubuh dokumen HTML -->
</html> <!-- Penutup elemen HTML -->



// BUAT FILE inline_js.html
<!DOCTYPE html> <!-- Deklarasi tipe dokumen HTML -->
<html lang="en"> <!-- Mulai elemen HTML, dengan atribut bahasa "en" (Inggris) -->
<head>
    <meta charset="UTF-8"> <!-- Deklarasi karakter set UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Pengaturan tampilan untuk perangkat seluler -->
    <title>Document</title> <!-- Judul halaman web -->
</head>
<body> <!-- Mulai bagian tubuh dokumen HTML -->
    <button onclick="document.getElementById('title').innerHTML = 'LHAA MUNCUL'">Tekan ini! </button> <!-- Tombol yang mengubah konten h1 saat diklik -->
    <h1 id="title"></h1> <!-- Elemen h1 dengan atribut id "title" -->
</body> <!-- Penutup bagian tubuh dokumen HTML -->
</html> <!-- Penutup elemen HTML -->





// BUAT FILE internal_js.html
<!DOCTYPE html> <!-- Deklarasi tipe dokumen HTML -->
<html lang="en"> <!-- Mulai elemen HTML, dengan atribut bahasa "en" (Inggris) -->
<head>
    <meta charset="UTF-8"> <!-- Deklarasi karakter set UTF-8 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Pengaturan tampilan untuk perangkat seluler -->
    <title>Belajar JavaScript Event Listener</title> <!-- Judul halaman web -->
</head>
<body> <!-- Mulai bagian tubuh dokumen HTML -->
    <button id="button">Klik ini bangggg </button> <!-- Tombol dengan atribut id "button" -->
    <h1 id="title"></h1> <!-- Elemen h1 dengan atribut id "title" -->
    <script>
        document.getElementById("button").addEventListener("click", ()=>{ <!-- Skrip JavaScript untuk menambahkan event listener ke tombol -->
            document.getElementById("title").innerText = "HAHAHAHAHAHA "; 
        })
    </script> 
</body> <!-- Penutup bagian tubuh dokumen HTML -->
</html> <!-- Penutup elemen HTML -->






